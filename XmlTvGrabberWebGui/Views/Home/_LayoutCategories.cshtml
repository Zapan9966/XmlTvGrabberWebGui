@using XmlTvGrabberWebGui.Views.Shared
@using XmlTvGrabberWebGui.Views.Home

@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["AppActivePage"] = AppPages.Categories;
}

<div class="flex-container-layout">
    <div class="flex-container-layout-header">
        <h1 class="d-inline">@ViewData["Title"]</h1>
        @RenderSection("LayoutMenu", required: false)
        <hr />
    </div>
    <div class="row flex-container-layout-content flex-nowrap">
        <div class="col-3 border-right">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a class="nav-link @CategoriesNavClass.XmlPageClass(ViewContext)" asp-controller="Home" asp-action="XmlCategories">
                        Affectations
                        <i class="fas fa-caret-right"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @CategoriesNavClass.TvHeadendPageClass(ViewContext)" asp-controller="Home" asp-action="TvHeadendCategories">
                        TvHeadend
                        <i class="fas fa-caret-right"></i>
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-9 flex-container-layout-render">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
