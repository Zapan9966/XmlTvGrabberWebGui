@using XmlTvGrabberWebGui.Views.Shared

<!DOCTYPE html>
<html lang="fr">
    <head>
        <base href="~/" />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>XmlTvGrabberWebGui - @ViewData["Title"]</title>
        <link rel="icon" type="image/png" href="~/favicon.ico">
        <environment include="Development">
            <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
            <link rel="stylesheet" href="~/lib/fontawesome/css/all.css" />
            <link rel="stylesheet" href="~/css/non-responsive.css" />
            <link rel="stylesheet" href="~/css/site.css" />
        </environment>
        <environment exclude="Development">
            <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/css/non-responsive.min.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        </environment>
        @RenderSection("CSS", required: false)
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand fixed-top navbar-dark bg-dark border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">XmlTvGrabber</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link @AppPages.CategoriesPageClass(ViewContext)" asp-area="" asp-controller="Home" asp-action="Categories">Categories</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link @AppPages.GrabberPageClass(ViewContext)" asp-area="" asp-controller="Home" asp-action="Grabber">Grabber</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link @AppPages.ConfigurationPageClass(ViewContext)" asp-area="" asp-controller="Home" asp-action="Configuration">Configuration</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link @AppPages.LogViewerPageClass(ViewContext)" asp-area="" asp-controller="Home" asp-action="LogViewer">Logs</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container body-container">
            @RenderBody()
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - XmlTvGrabber WebGui
            </div>
        </footer>
        <environment include="Development">
            <script src="~/lib/jquery/dist/jquery.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
            <script src="~/lib/moment/moment-with-locales.js"></script>
            <script src="~/lib/jquery-mask/dist/jquery.mask.js"></script>
            <script src="~/js/site.js"></script>
        </environment>
        <environment exclude="Development">
            <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
            <script src="~/lib/moment/moment-with-locales.min.js" asp-append-version="true"></script>
            <script src="~/lib/jquery-mask/dist/jquery.mask.min.js" asp-append-version="true"></script>
            <script src="~/js/site.min.js" asp-append-version="true"></script>
        </environment>
        @RenderSection("Scripts", required: false)
    </body>
</html>
